<h1>Sign up</h1>

<%= form_for(@user) do |f| %>

  <div>
  <%= f.label :username %>
  <%= f.text_field :username, required:true %>
  </div>
  <div>
  <%= f.label :email %>
  <%= f.email_field :email %>
  </div>
  <div>
  <%= f.label :password %>
  <%= f.password_field :password %>
  </div>
  <div>
  <%= f.submit "Sign In" %>
  </div>

<% end %>